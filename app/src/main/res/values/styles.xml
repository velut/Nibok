<resources>

    <style name="NibokTheme" parent="NibokTheme.Base">

    </style>

    <style name="NibokTheme.Base" parent="Theme.Design.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="NibokTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NibokTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="horizontal_detail_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="positiveButton"
        parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textColor">@color/icons</item>
    </style>

</resources>